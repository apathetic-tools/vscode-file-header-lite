{
  "name": "vscode-file-header",
  "displayName": "File Header for AI",
  "version": "0.0.1",
  "description": "Lightweight file headers for AI chats and humans.",
  "keywords": [
    "file header",
    "comment header",
    "filepath",
    "filename",
    "AI chat",
    "context"
  ],
  "author": {
    "name": "Apathetic Tools",
    "url": "https://github.com/apathetic-tools"
  },
  "publisher": "apathetic",
  "license": "MIT",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/apathetic-tools/vscode-file-header"
  },
  "bugs": {
    "url": "https://github.com/apathetic-tools/vscode-file-header/issues"
  },
  "homepage": "https://github.com/apathetic-tools/vscode-file-header#readme",
  "type": "commonjs",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "File Header for AI",
      "properties": {
        "filenameHeader.languages": {
          "type": "object",
          "default": {
            "javascript": "// ${relativeFile}",
            "typescript": "// ${relativeFile}",
            "python": "# ${relativeFile}",
            "html": "<!-- ${relativeFile} -->"
          },
          "description": "Map of language id to header format. Supports ${fileName} and ${relativeFile}.",
          "scope": "resource"
        },
        "filenameHeader.roles": {
          "type": "object",
          "default": {},
          "description": "Optional mapping of glob patterns to role/type labels. Example: { 'src/components/*': 'React component' }",
          "scope": "resource"
        },
        "filenameHeader.addLanguageLabel": {
          "type": "boolean",
          "default": true,
          "description": "Whether to automatically append a human-readable language label (e.g. '(TypeScript React)').",
          "scope": "resource"
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p tsconfig.build.json",
    "watch": "tsc -w -p tsconfig.build.json",
    "build": "pnpm run compile",
    "dev": "pnpm run watch",
    "package": "pnpm run build && vsce package",
    "publish": "pnpm run build && vsce publish",
    "icon:png": "pnpm run icon:png:128 && pnpm run icon:png:256",
    "icon:png:128": "pnpm dlx @resvg/resvg-js-cli images/icon.svg images/icon.png",
    "icon:png:256": "pnpm dlx @resvg/resvg-js-cli images/icon.svg images/icon@256.png 2",
    "format": "prettier --write .",
    "check": "pnpm run lint:prettier && pnpm run lint:eslint && pnpm run lint:tsc",
    "lint:prettier": "prettier --check .",
    "lint:eslint": "eslint . --ext .ts",
    "lint:tsc": "tsc --noEmit -p tsconfig.build.json",
    "fix": "pnpm run fix:prettier & pnpm run fix:eslint & pnpm run lint:tsc",
    "fix:prettier": "prettier --write .",
    "fix:eslint": "eslint . --ext .ts --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "coverage": "vitest run --coverage",
    "verify": "pnpm run lint:prettier & pnpm run lint:eslint & pnpm run lint:tsc & pnpm run test"
  },
  "dependencies": {
    "minimatch": "^10.0.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@types/node": "^24.6.2",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vscode/vsce": "^2.30.0",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "jiti": "^2.6.1",
    "lint-staged": "^16.2.3",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.45.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@10.18.0",
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --ext .ts --fix"
    ],
    "*.{json,.jsonc,md,mdx,yml,yaml}": [
      "prettier --write"
    ]
  }
}
